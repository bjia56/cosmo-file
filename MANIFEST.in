# Include the Cosmopolitan binary in source distributions
include src/cosmo_file/data/*
exclude src/cosmo_file/data/.gitignore

# Include license and readme
include LICENSE
include README.md

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude .DS_Store
prune patches
prune scripts
prune build
prune dist
prune .git
prune .github